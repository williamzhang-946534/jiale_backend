datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  engineType = "binary"
}

enum UserRole {
  CUSTOMER
  PROVIDER
  ADMIN
}

enum ProviderStatus {
  UNVERIFIED
  PENDING
  VERIFIED
  REJECTED
}

enum ProviderType {
  MATERNITY_NURSE     // 月嫂
  CHILD_CARE_NURSE    // 育儿嫂
  LIVE_IN_NANNY       // 住家保姆
  CLEANING            // 保洁
  HOUSEKEEPING        // 清洁
  HOURLY_WORKER       // 钟点工
  LAUNDRY_CARE        // 洗护
  HOSPITAL_CARE       // 医院看护
  ELDERLY_CARE        // 老人护理
  COOKING             // 烹饪
  TUTORING            // 家教
}

enum OrderStatus {
  PENDING
  ACCEPTED
  ARRIVED
  STARTED
  COMPLETED
  CANCELED
}

enum TransactionType {
  INCOME
  WITHDRAWAL
  REFUND
}

enum WithdrawalStatus {
  PENDING
  PENDING_REVIEW
  APPROVED
  REJECTED
}

model User {
  id            String       @id @default(cuid())
  phone         String       @unique
  nickname      String?
  password      String
  avatarUrl     String?
  role          UserRole     @default(CUSTOMER)
  level         Int          @default(1)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  walletBalance Decimal      @default(0.0) @db.Decimal(18, 2)

  addresses     Address[]
  orders        Order[]      @relation("UserOrders")
  coupons       UserCoupon[]
  transactions  Transaction[]
  providers     Provider[]   // 一个用户可以对应多个服务者
}

model Provider {
  id                    String           @id @default(cuid())
  user                  User             @relation(fields: [userId], references: [id])
  userId                String
  name                  String
  phone                 String
  status                ProviderStatus   @default(UNVERIFIED)
  isBanned              Boolean          @default(false)
  rejectReason          String?
  
  // 基本信息
  intro                 String?
  avatarUrl             String?
  idCardNumber          String?
  idCardImageUrl        String?
  certFiles             Json?
  
  // 统计信息
  rating                Decimal?         @db.Decimal(3, 2)
  totalOrders           Int              @default(0)
  totalRevenue          Decimal          @default(0.0) @db.Decimal(18, 2)
  todayEarnings         Decimal          @default(0.0) @db.Decimal(18, 2)
  walletBalance         Decimal          @default(0.0) @db.Decimal(18, 2)
  withdrawableBalance   Decimal          @default(0.0) @db.Decimal(18, 2)
  
  // 个人信息
  age                   Int?
  experience            Int?             // 年经验
  zodiac                String?          // 星座
  chineseZodiac         String?          // 属相
  hometown              String?          // 籍贯
  homeAddress           String?          // 家庭住址
  workExperience        Json?            // 工作经历
  expectedSalary        Decimal?         @db.Decimal(10, 2)
  actualSalary          Decimal?         @db.Decimal(10, 2)
  
  // 服务信息
  providerTypes         ProviderType[]   // 服务类型（多选）
  serviceArea           String           @default("河南漯河") // 服务区域
  isOnline              Boolean          @default(false)
  isRecommended         Boolean          @default(false) // 是否推荐展示在首页
  
  createdAt             DateTime         @default(now())
  updatedAt             DateTime         @updatedAt

  orders                Order[]          @relation("ProviderOrders")
  schedules             ProviderSchedule[]
  withdrawals           Withdrawal[]
  transactions          Transaction[]
  dailyStats            ProviderDailyStats[]
}

model ProviderDailyStats {
  id          String   @id @default(cuid())
  providerId  String
  provider    Provider @relation(fields: [providerId], references: [id])
  date        DateTime @default(now()) @db.Date
  
  // 当日统计
  orderCount  Int      @default(0)
  orderAmount Decimal  @default(0.0) @db.Decimal(18, 2)
  orderTypes  Json?    // 订单类型统计，如 {"月嫂": 2, "保洁": 1}
  
  // 当日收入
  earnings    Decimal  @default(0.0) @db.Decimal(18, 2)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@unique([providerId, date])
}

model AdminUser {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  auditLogs AuditLog[]
}

model ServiceCategory {
  id        String            @id @default(cuid())
  name      String
  parentId  String?
  icon      String?
  sortOrder Int               @default(1)

  parent    ServiceCategory?  @relation("CategoryToParent", fields: [parentId], references: [id])
  children  ServiceCategory[] @relation("CategoryToParent")

  services  Service[]
}

model Service {
  id          String          @id @default(cuid())
  name        String
  category    ServiceCategory @relation(fields: [categoryId], references: [id])
  categoryId  String
  price       Decimal         @db.Decimal(18, 2)
  unit        String
  images      String[]
  description String?
  tags        String[]
  status      String          @default("active")
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  orders      Order[]
}

model Address {
  id          String   @id @default(cuid())
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  contactName String
  phone       String
  province    String
  city        String
  district    String
  detail      String
  latitude    Float?
  longitude   Float?
  isDefault   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  orders      Order[]
}

model Order {
  id            String      @id @default(cuid())
  orderNo       String      @unique
  user          User        @relation("UserOrders", fields: [userId], references: [id])
  userId        String
  provider      Provider?   @relation("ProviderOrders", fields: [providerId], references: [id])
  providerId    String?
  service       Service     @relation(fields: [serviceId], references: [id])
  serviceId     String
  address       Address     @relation(fields: [addressId], references: [id])
  addressId     String
  status        OrderStatus @default(PENDING)
  serviceDate   DateTime
  serviceTime   String
  duration      Int?
  originalPrice Decimal     @db.Decimal(18, 2)
  discount      Decimal     @db.Decimal(18, 2)
  totalPrice    Decimal     @db.Decimal(18, 2)
  paidAmount    Decimal     @default(0.0) @db.Decimal(18, 2)
  paidAt        DateTime?
  specialRequests String?
  timeline      Json?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  orderLogs    OrderOperationLog[]
  transactions Transaction[]
  reviews      OrderReview?
}

model OrderOperationLog {
  id          String      @id @default(cuid())
  order       Order       @relation(fields: [orderId], references: [id])
  orderId     String
  operatorId  String
  operatorRole UserRole
  oldStatus   OrderStatus
  newStatus   OrderStatus
  remark      String?
  createdAt   DateTime    @default(now())
}

model OrderReview {
  id        String   @id @default(cuid())
  order     Order    @relation(fields: [orderId], references: [id])
  orderId   String   @unique
  rating    Int
  content   String?
  createdAt DateTime @default(now())
}

model Banner {
  id        String   @id @default(cuid())
  imageUrl  String
  linkUrl   String?
  sortOrder Int      @default(1)
  status    String   @default("draft") // draft: 草稿, published: 已发布
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CouponTemplate {
  id            String   @id @default(cuid())
  name          String
  amount        Decimal  @db.Decimal(18, 2)
  minSpend      Decimal  @db.Decimal(18, 2)
  totalQuantity Int
  validDays     Int
  description   String?
  userLimit     Int      @default(1)
  categoryIds   String[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  userCoupons   UserCoupon[]
}

model UserCoupon {
  id         String         @id @default(cuid())
  user       User           @relation(fields: [userId], references: [id])
  userId     String
  template   CouponTemplate @relation(fields: [templateId], references: [id])
  templateId String
  isUsed     Boolean        @default(false)
  usedAt     DateTime?
  expireAt   DateTime
  createdAt  DateTime       @default(now())
}

model Withdrawal {
  id             String           @id @default(cuid())
  provider       Provider         @relation(fields: [providerId], references: [id])
  providerId     String
  amount         Decimal          @db.Decimal(18, 2)
  status         WithdrawalStatus @default(PENDING)
  applyTime      DateTime         @default(now())
  bankInfo       String
  firstReviewerId  String?
  secondReviewerId String?
  reviewedAt     DateTime?
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt

  transactions   Transaction[]
}

model Transaction {
  id            String          @id @default(cuid())
  type          TransactionType
  amount        Decimal         @db.Decimal(18, 2)
  beforeBalance Decimal         @db.Decimal(18, 2)
  afterBalance  Decimal         @db.Decimal(18, 2)
  user          User?           @relation(fields: [userId], references: [id])
  userId        String?
  provider      Provider?       @relation(fields: [providerId], references: [id])
  providerId    String?
  order         Order?          @relation(fields: [orderId], references: [id])
  orderId       String?
  withdrawal    Withdrawal?     @relation(fields: [withdrawalId], references: [id])
  withdrawalId  String?
  createdAt     DateTime        @default(now())
}

model ProviderSchedule {
  id         String   @id @default(cuid())
  provider   Provider @relation(fields: [providerId], references: [id])
  providerId String
  date       DateTime
  slots      String[]
  createdAt  DateTime @default(now())
}

model AuditLog {
  id           String   @id @default(cuid())
  module       String
  action       String
  operatorId   String
  operatorRole UserRole
  entityId     String?
  detail       Json?
  createdAt    DateTime @default(now())

  admin        AdminUser? @relation(fields: [adminId], references: [id])
  adminId      String?
}

model SpecialOffer {
  id          String   @id @default(cuid())
  name        String
  category    String
  price       Decimal  @db.Decimal(18, 2)
  unit        String
  rating      Decimal  @db.Decimal(3, 2)
  image       String
  description String
  providerCount Int    @default(0)
  tags        String[]
  status      String   @default("active") // active: 上架, inactive: 下架
  sortOrder   Int      @default(1)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}


